{
  "name": "vue-dndnr",
  "type": "module",
  "version": "1.0.0",
  "description": "Vue 3 Draggable and Resizable Component Library",
  "author": "simon1uo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simon1uo/vue-dndnr.git"
  },
  "keywords": [
    "vue",
    "draggable",
    "resizable",
    "vue3"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/vue-dndnr.es.js",
      "require": "./dist/vue-dndnr.umd.js"
    }
  },
  "main": "./dist/vue-dndnr.umd.js",
  "module": "./dist/vue-dndnr.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-p type-check \"build-only {@}\" --",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint --cache . --fix",
    "prepublishOnly": "npm run build",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "release": "bumpp"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "dependencies": {
    "@vueuse/motion": "^3.0.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.12.0",
    "@iconify-json/lucide": "^1.2.37",
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22.14.0",
    "@types/prompts": "^2.4.9",
    "@types/semver": "^7.7.0",
    "@unocss/preset-attributify": "66.1.0-beta.12",
    "@unocss/preset-icons": "66.1.0-beta.12",
    "@unocss/preset-uno": "66.1.0-beta.12",
    "@unocss/reset": "66.1.0-beta.12",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitejs/plugin-vue-jsx": "^4.1.2",
    "@vue/tsconfig": "^0.7.0",
    "bumpp": "^10.1.0",
    "changelogithub": "^13.13.0",
    "eslint": "^9.24.0",
    "lint-staged": "^15.5.1",
    "npm-run-all2": "^7.0.2",
    "picocolors": "^1.1.1",
    "prompts": "^2.4.2",
    "semver": "^7.7.1",
    "simple-git-hooks": "^2.13.0",
    "terser": "^5.39.0",
    "tsx": "^4.19.3",
    "typescript": "~5.8.0",
    "unocss": "66.1.0-beta.12",
    "vite": "^6.2.4",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vitepress": "^1.6.3",
    "vue": "^3.5.13",
    "vue-tsc": "^2.2.8"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,vue,jsx,tsx}": "eslint --cache --fix"
  }
}
